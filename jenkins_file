pipeline {
    agent any

    stages {
        stage('Build Start') {
            steps {
                slackSend (message: "üöÄ Build started for *${env.JOB_NAME}* [#${env.BUILD_NUMBER}]")
                echo 'Build Started'
            }
        }

        stage('Build') {
            steps {
                // your build steps here
                echo 'Running build steps...'
            }
        }
    }

    post {
        success {
            slackSend (message: "‚úÖ Build SUCCESS for *${env.JOB_NAME}* [#${env.BUILD_NUMBER}]")
        }
        failure {
            slackSend (message: "‚ùå Build FAILED for *${env.JOB_NAME}* [#${env.BUILD_NUMBER}]")
        }
    }
}
