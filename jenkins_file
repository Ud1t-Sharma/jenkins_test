pipeline {
    agent any

    environment {
        SLACK_CHANNEL = '#swim' // Replace with your Slack channel
        SLACK_CREDENTIAL_ID = 'swim-channel' // Add this in Jenkins Credentials
    }

    stages {
        stage('Build Start') {
            steps {
                slackSend (
                    channel: env.SLACK_CHANNEL,
                    color: '#439FE0',
                    message: "üöÄ Build started for *${env.JOB_NAME}* [#${env.BUILD_NUMBER}]",
                    tokenCredentialId: env.SLACK_CREDENTIAL_ID
                )
                echo 'Build Started'
            }
        }

        stage('Build') {
            steps {
                echo 'Running build steps...'
            }
        }
    }

    post {
        success {
            slackSend (
                channel: env.SLACK_CHANNEL,
                color: 'good',
                message: "‚úÖ Build SUCCESS for *${env.JOB_NAME}* [#${env.BUILD_NUMBER}]",
                tokenCredentialId: env.SLACK_CREDENTIAL_ID
            )
        }
        failure {
            slackSend (
                channel: env.SLACK_CHANNEL,
                color: 'danger',
                message: "‚ùå Build FAILED for *${env.JOB_NAME}* [#${env.BUILD_NUMBER}]",
                tokenCredentialId: env.SLACK_CREDENTIAL_ID
            )
        }
    }
}
